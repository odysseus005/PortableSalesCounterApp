<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.portablesalescounterapp">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>


    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.register.RegisterActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ui.profile.ProfileActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
        android:name=".ui.profile.edit.EditProfileActivity"
        android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.item.category.CategoryListActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.item.product.ProductListActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.inventory.InventoryActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.inventory.restock.RestockListActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.reports.analytics.AnalyticsChartActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="sensorLandscape"/>

        <activity
            android:name=".ui.reports.salesReport.SaleChartActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="sensorLandscape"/>

        <activity
            android:name=".ui.reports.ReportsActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.manageqr.ProductQrListActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.guest.GuestActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.business.BusinessListActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.inventory.monitor.MonitorListActivity"
            android:windowSoftInputMode="adjustResize" />



        <activity
            android:name=".ui.receipts.ReceiptListActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.item.discount.DiscountListActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.item.ItemActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.manageuser.EmployeeListActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".ui.forgot.ForgotPasswordActivity" />

        <activity
            android:name=".util.AnyOrientationCaptureActivity"
            android:label="Appliances Details"
            android:screenOrientation="portrait" />

    </application>

</manifest>
