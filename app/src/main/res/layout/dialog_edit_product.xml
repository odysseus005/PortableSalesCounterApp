<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


        <variable
            name="view"
            type="com.portablesalescounterapp.ui.item.product.ProductListView" />

        <variable
            name="product"
            type="com.portablesalescounterapp.model.data.Products" />

        <variable
            name="contentVisible"
            type="boolean" />

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:minWidth="400dp"
        android:background="@color/dialog"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:padding="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                />

            <Button
                android:id="@+id/btn_change_image"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Select Profile Photo"
                android:textColor="@android:color/white" />

        </LinearLayout>


        <!-- email address -->
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_selector"
            android:hint="Name"
            android:text='@{product.productName}'
            android:inputType="textPersonName"
            android:maxLength="150"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />
        <!-- first name -->
        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_selector"
            android:hint="Description"
            android:text='@{product.productDescription}'
            android:maxLength="100"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />
        <!-- last name -->
        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_selector"
            android:hint="Price"
            android:text='@{product.productPrice}'
            android:inputType="numberDecimal"
            android:maxLength="100"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_marginTop="8dp"
                android:layout_height="40dp"
                android:text="Sold by"
                android:layout_marginRight="@dimen/activity_half_margin"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_below="@+id/LinearMoTo" />



            <TextView
                android:id="@+id/each"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_marginTop="8dp"
                android:layout_height="40dp"
                android:background="@color/lightGray"
                android:clickable="true"
                android:text="Each"
                android:layout_marginRight="@dimen/activity_half_margin"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/weight"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_marginTop="8dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:padding="8dp"
                android:text="Weight(kg)"
                android:textAllCaps="true"
                android:gravity="center"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="Optional"
            android:layout_marginRight="@dimen/activity_half_margin"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_below="@+id/LinearMoTo" />




        <Spinner
            android:id="@+id/sp_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_spinner"
            android:fontFamily="sans-serif"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />


        <EditText
            android:id="@+id/et_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_selector"
            android:hint="Bar Code"
            android:text='@{product.productBar}'
            android:inputType="number"
            android:maxLength="255"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_button_solid"
                android:clickable="true"
                android:padding="8dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="CANCEL"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_button_solid"
                android:clickable="true"
                android:padding="8dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</layout>