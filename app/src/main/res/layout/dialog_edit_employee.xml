<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


        <variable
            name="view"
            type="com.portablesalescounterapp.ui.manageuser.EmployeeListView" />

        <variable
            name="employee"
            type="com.portablesalescounterapp.model.data.Employee" />

        <variable
            name="contentVisible"
            type="boolean" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:padding="16dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:padding="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                />

            <Button
                android:id="@+id/btn_change_image"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Select Profile Photo"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_selector"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="First Name"
            android:text='@{employee.firstname}'
            android:inputType="textPersonName|textCapWords"
            android:maxLength="100"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />
        <!-- last name -->
        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_selector"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:hint="Last Name"
            android:text='@{employee.lastname}'
            android:inputType="textPersonName|textCapWords"
            android:maxLength="100"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_selector"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:hint="Position"
            android:text='@{employee.position}'
            android:inputType="textPersonName|textCapWords"
            android:maxLength="100"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />


        <!-- address -->
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_selector"
            android:hint="Address"
            android:text='@{employee.address}'
            android:inputType="textPostalAddress"
            android:maxLength="255"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />

        <FrameLayout
            android:id="@+id/layout_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_spinner"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/et_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="Birthday"
                android:text='@{employee.birthday}'
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColorHint="@android:color/darker_gray" />



        </FrameLayout>

        <!-- mobile number -->
        <EditText
            android:id="@+id/et_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_selector"
            android:hint="Mobile Number"
            android:text='@{employee.contact}'
            android:inputType="number"
            android:maxLength="11"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_button_solid"
                android:clickable="true"
                android:padding="8dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="CANCEL"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_button_solid"
                android:clickable="true"
                android:padding="8dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</layout>