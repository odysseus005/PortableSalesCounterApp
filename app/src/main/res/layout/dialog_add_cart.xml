<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>
        <variable
            name="view"
            type="com.portablesalescounterapp.ui.main.MainActivityView" />

        <variable
            name="product"
            type="com.portablesalescounterapp.model.data.Products" />

        <variable
            name="contentVisible"
            type="boolean" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:background="@color/dialog"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Add to Cart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/reg_usergroup">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{product.productName}'
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/darkGray"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/view_item_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/darkGray"
                            android:text="Quantity: 45pcs"/>


                        <TextView
                            android:id="@+id/view_item_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Php: 28,000.00"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/darkGray"
                            android:textSize="16dp"
                           />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".3"
                            android:layout_marginTop="8dp"
                            android:layout_height="40dp"
                            android:text="Quantity: "
                            android:layout_marginRight="@dimen/activity_half_margin"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:layout_below="@+id/LinearMoTo" />

                        <EditText
                            android:id="@+id/buy_item_quantity"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:background="@drawable/edittext_selector"
                            android:text="1"
                            android:maxLength="100"
                            android:inputType="number"
                            android:padding="12dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                            android:textColorHint="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/buy_item_prodcode"
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_marginLeft="3dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/darkGray"
                            android:textSize="14sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".4"
                            android:layout_marginTop="8dp"
                            android:layout_height="40dp"
                            android:text="Total Price: "
                            android:layout_marginRight="@dimen/activity_half_margin"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:layout_below="@+id/LinearMoTo" />

                        <TextView
                            android:id="@+id/buy_item_price"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_marginTop="8dp"
                            android:layout_height="40dp"
                            android:textColor="@color/colorAccent"
                            android:text="Php 1000,00"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginRight="@dimen/activity_half_margin"
                            android:textAllCaps="true"
                            android:gravity="center"
                            />



                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:padding="16dp"
                    android:gravity="right"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/buy"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button_solid"
                        android:clickable="true"
                        android:padding="8dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:visibility="gone"
                        android:text="CONTINUE"
                        android:layout_marginRight="@dimen/activity_half_margin"
                        android:textAllCaps="true"
                        android:gravity="center|right"
                        android:paddingRight="25dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_below="@+id/LinearMoTo" />

                    <TextView
                        android:id="@+id/send"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button_solid"
                        android:clickable="true"
                        android:padding="8dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:text="BUY"
                        android:layout_marginRight="@dimen/activity_half_margin"
                        android:textAllCaps="true"
                        android:gravity="center|right"
                        android:paddingRight="25dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_below="@+id/LinearMoTo" />



                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button_solid"
                        android:clickable="true"
                        android:padding="8dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:text="Cancel"
                        android:textAllCaps="true"
                        android:gravity="center|right"
                        android:paddingRight="25dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>