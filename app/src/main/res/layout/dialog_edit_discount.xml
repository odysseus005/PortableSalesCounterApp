<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>
        <variable
            name="view"
            type="com.portablesalescounterapp.ui.item.discount.DiscountListView" />

        <variable
            name="discount"
            type="com.portablesalescounterapp.model.data.Discount" />

        <variable
            name="contentVisible"
            type="boolean" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:background="@color/dialog"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Edit Discount"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/reg_usergroup">



                    <!-- email address -->
                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_selector"
                        android:hint="Name"
                        android:text='@{discount.discountName}'
                        android:maxLength="150"
                        android:padding="12dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColorHint="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/et_value"
                            android:layout_width="0dp"
                            android:layout_weight=".6"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittext_selector"
                            android:hint="Value"
                            android:text='@{discount.discountValue}'
                            android:maxLength="100"
                            android:padding="12dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                            android:textColorHint="@android:color/darker_gray" />



                        <TextView
                            android:id="@+id/percent"
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_marginTop="8dp"
                            android:layout_height="40dp"
                            android:background="@color/lightGray"
                            android:clickable="true"
                            android:text="%"
                            android:layout_marginRight="@dimen/activity_half_margin"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_below="@+id/LinearMoTo" />

                        <TextView
                            android:id="@+id/sigma"
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_marginTop="8dp"
                            android:layout_height="40dp"
                            android:background="@color/colorPrimary"
                            android:clickable="true"
                            android:padding="8dp"
                            android:text="Î£"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:paddingRight="25dp"
                            android:textColor="@color/white"
                            android:textSize="14sp" />


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:padding="16dp"
                    android:gravity="right"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/send"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button_solid"
                        android:clickable="true"
                        android:padding="8dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:text="Save"
                        android:layout_marginRight="@dimen/activity_half_margin"
                        android:textAllCaps="true"
                        android:gravity="center|right"
                        android:paddingRight="25dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_below="@+id/LinearMoTo" />

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button_solid"
                        android:clickable="true"
                        android:padding="8dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:text="Cancel"
                        android:textAllCaps="true"
                        android:gravity="center|right"
                        android:paddingRight="25dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>